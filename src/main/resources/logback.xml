<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{12} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- loggers -->

    <root level="warn">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
